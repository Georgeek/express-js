// Page buttons
.home-cta
	padding: .4em 0
	line-height: 1.25
	display: block
	background: white
	font-size: 28px
	text-align: center
	text-decoration: none
	box-shadow: 0 5px 14px rgba(0, 0, 0, .4)
	transition: all .15s ease-in-out
	&:hover
		box-shadow: 0 3px 10px rgba(0, 0, 0, .2)
		transform: translateY(2px)
