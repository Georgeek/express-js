.site-wrap
	.mobile-nav
		display: none
		transform: translateY(-100%)
		transition: all .3s ease-in-out
		ul
			margin: 0 auto
			padding: 0
			display: flex
			flex-direction: row
			list-style: none

	header
		width: 6rem
		.header-position
			padding: 2em 0
			position: fixed
			top: 0
			left: 0
			bottom: 0
			display: flex
			flex-direction: column
			justify-content: space-between
			background-color: white
			text-align: center
		&:hover
			.nav-text
				transform: translateX(0)
				transition: .2s
		.nav-text
			margin-top: 5px
			transform: translateX(-100px)
			transition: .1s
			color: black
		ul
			margin: 0 auto
			padding: 0
			display: flex
			flex-direction: column
			list-style: none

// SVG icons header
	svg
		margin: 0 auto
		width: 40px
		height: 40px
	.logo
		svg
			height: 80px
			width: 80px
	.social-links
		margin: 0 auto
		padding: 0

// Button mobile-nav-toggle
	.mobile-nav-toggle
		margin-right: 20px
		width: 45px
		height: 50px
		display: none
		cursor: pointer

		span,
		span:before,
		span:after
			content: ''
			display: block
			width: 100%
			height: 3px
			background: #333
			position: relative
			transition: all .3s ease-in-out

		span:before
			top: 15px
		span:after
			bottom: 18px

		&:hover span
			background: transparent

		&:hover span:before,
		&:hover span:after
			transform-origin: center
			width: 50px

		&:hover span:before
			transform: rotate(45deg)
			top: 0

		&:hover span:after
			transform: rotate(-45deg)
			top: -2px

@media (max-width: 775px)
	.site-wrap
		.mobile-nav.is-open
			padding: 58px 0 0
			width: 100%
			position: absolute
			display: flex
			justify-content: space-around
			background: white

			transform: translateY(0%)

			ul
				justify-content: space-between
				margin: 0
				li
					margin-right: .3em
					&:last-child
						margin-right: 0
			a.nav-bar
				padding: .7rem .6rem
				display: flex
				flex-direction: column
				text-align: center
				// text-transform: uppercase
				color: black
			svg
				margin: 0 auto
				width: 25px
				height: 25px
			.social-links
				margin: 0
			.nav-text
				margin-top: .1em


		header
			width: auto
			// padding: 20px 0
			.nav-text
				margin-top: 5px
				transform: translateX(0)
				transition: .1s
				color: black
			a.nav-bar
				margin: 0 1em

			.logo
				svg
					height: 40px
					width: 40px
			ul
				flex-direction: row
				li
					margin: 0 1em

			ul, .social-links
				display: none

			.header-position
				position: relative
				top: auto
				left: auto
				bottom: auto
				padding: 0
				flex-direction: row
				justify-content: space-between
				align-items: center

			.mobile-nav-toggle
				display: flex
				align-items: center
