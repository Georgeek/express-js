section.articles
	background: #FFB273

	.col-1
		display: flex
		align-items: center

	.article-wrap
		margin: -2rem 1rem
		display: flex
		flex-wrap: wrap

	.home-cta
		background: #3d96cb
		color: white

	.article-thumb
		display: block
		background-repeat: no-repeat
		background-size: cover
		// background-position: center
		width: 25%
		float: left
		position: relative
		overflow: hidden
		opacity: 0
		transition: all .3s ease-in-out

		&.is-visible
			opacity: 1
		&.is-emph
			animation-name: tada
			animation-duration: 1s
			animation-fill-mode: both
			z-index: 1
			overflow: hidden

		&:after
			content: ''
			display: block
			padding-top: 100%

	.article-meta
		position: absolute
		padding: 10px
		left: 0
		right: 0
		top: 0
		bottom: 0
		background: fade-out(pink, .3)
		color: white
		opacity: 0
		transform: translate(0%, 100%) scale(.5)
		transition: all 200ms ease-in-out

	.name, .date
		font-size: 16px
		line-height: 1.2

	.date
		font-style: italic

	.article-thumb:hover .article-meta
		opacity: 1
		transform: translate(0%, 0%) scale(1)

	@media (max-width: 640px)
		.description-wrap
			margin-top: 50px

	@media (max-width: 999px) and (min-width: 640px)
		.article-thumb
			width: 33.3%


@keyframes tada
	from
		transform: scale3d(1, 1, 1)
	10%, 20%
		transform: scale3d(.9, .9, .9) rotate3d(0, 0, 1, -1deg)
	30%, 50%, 70%, 90%
		transform: scale3d(1.05, 1.05, 1.05) rotate3d(0, 0, 1, 1deg)
	40%, 60%, 80%
		transform: scale3d(1.05, 1.05, 1.05) rotate3d(0, 0, 1, -1deg)
	to
		transform: scale3d(1, 1, 1)
