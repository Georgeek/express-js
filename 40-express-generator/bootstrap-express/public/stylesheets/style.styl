body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #a0a0a0
a
  color: #00B7FF

header
  width: 135px
  padding: 30px 0
  position: fixed
  top: 0
  left: 0
  bottom: 0
  display: flex
  flex-direction: column
  justify-content: space-between
  background-color: white
  
  .logo
    height: 80px
    background-image: url(/images/nodejs-icon.svg) 
    background-repeat: no-repeat
    background-position: center
    background-size: contain

  ul
    margin: 20px 0
    padding: 0 20px 0 0
    display: flex
    flex-direction: column
    list-style: none
    text-align:  right
    li
      margin-bottom: 10px
      &:last-child
        margin-bottom: 0

  .social-links
    display: flex
    flex-direction: column
    margin: 20px 0
    padding: 0 20px 0 5px
    // justify-content: space-around
    // padding: 5px
    // margin: 10px
    a
      display: flex
      flex-direction: row-reverse
      // justify-content: space-between
      div
        padding-right: 10px

    &--github
      height: 20px
      width: 20px
      background-image: url(/images/github.svg) 
      background-repeat: no-repeat
      background-position: center
      background-size: contain
      // &:before
      //   fill: red
    &--gmail
      background-image: url(/images/google.svg) 
      height: 20px
      width: 20px
      background-repeat: no-repeat
      background-position: right
      background-size: contain
      text-align: right
    &--vk
      background-image: url(/images/vk.svg) 
      height: 20px
      width: 20px
      background-repeat: no-repeat
      background-position: center
      background-size: contain
    &--instagram
      background-image: url(/images/instagram.svg) 
      height: 20px
      width: 20px
      background-repeat: no-repeat
      background-position: center
      background-size: contain
