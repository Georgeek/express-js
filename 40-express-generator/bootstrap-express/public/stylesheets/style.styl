body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #a0a0a0

header
  width: 135px
  padding: 30px 0
  position: fixed
  top: 0
  left: 0
  bottom: 0
  display: flex
  flex-direction: column
  justify-content: space-between
  background-color: white
  text-align: center

  a
    color: #00B7FF
    text-transform: uppercase
    &:hover
      text-decoration: none
      
      color: red
    &:hover .nav-link--home-svg
      fill: red
  
  .logo
    height: 80px
    background-image: url(/images/nodejs-icon.svg) 
    background-repeat: no-repeat
    background-position: center
    background-size: contain

  ul
    margin: 20px 0
    padding: 0 20px 0 0
    display: flex
    flex-direction: column
    list-style: none
    li
      margin-bottom: 10px
      a
        margin: 0 auto
        display: flex
        flex-direction: column
        
        text-align: center
      &:last-child
        margin-bottom: 0
      svg
        margin: 0 auto
        width: 40px
        height: 40px
      .nav-link--home-svg
        fill: #aaa

  .social-links
    display: flex
    flex-direction: column
    margin: 20px 0
    padding: 0 20px 0 5px
